---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import { siteInfo } from "../../../config/siteInfo";
---

<Layout
    title="Contact ‚Äì Gehringer Consulting"
    description="Contact Philippe Gehringer, transition manager certified in Carbon Footprint, for your transformation and decarbonization projects."
>
    <Header slot="header" />
    <section class="max-w-4xl mx-auto px-6 py-16 text-gray-700">
        <!-- Main Title -->
        <h1 class="font-logo text-5xl text-center text-gray-900 mb-12">
            Contact Me
        </h1>

        <!-- Introduction -->
        <p
            class="text-center text-gray-600 mb-12 max-w-2xl mx-auto leading-relaxed"
        >
            Would you like to discuss a <strong>transition management</strong> mission,
            a <strong>sustainable development</strong> project, or a <strong
                >decarbonization</strong
            > approach?
            <br />Feel free to contact me directly or via the form below.
        </p>

        <!-- Direct Contact Details -->
        <div class="text-center mb-12 space-y-2">
            <p>
                üìß <a
                    href={`mailto:${siteInfo.email}`}
                    class="underline hover:text-slate-900 transition"
                    >{siteInfo.email}</a
                >
            </p>
            <p>
                üîó <a
                    href={siteInfo.linkedin}
                    target="_blank"
                    class="underline hover:text-slate-900 transition"
                    >LinkedIn</a
                >
            </p>
            <p>üìç Based in Suresnes ‚Äì √éle-de-France</p>
        </div>

        <!-- Contact Form -->
        <form
            name="contact-en"
            method="POST"
            action="/en/merci"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="bg-gray-50 rounded-2xl shadow-md p-8 space-y-6"
        >
            <!-- Required for Netlify -->
            <input type="hidden" name="form-name" value="contact-en" />
            <p class="hidden">
                <label>Don't fill this field: <input name="bot-field" /></label>
            </p>

            <div>
                <label
                    for="name"
                    class="block text-sm font-semibold text-gray-700 mb-1"
                    >Name *</label
                >
                <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-gray-700"
                />
            </div>

            <div>
                <label
                    for="email"
                    class="block text-sm font-semibold text-gray-700 mb-1"
                    >Email *</label
                >
                <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-gray-700"
                />
            </div>

            <div>
                <label
                    for="message"
                    class="block text-sm font-semibold text-gray-700 mb-1"
                    >Message *</label
                >
                <textarea
                    id="message"
                    name="message"
                    rows="5"
                    required
                    class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-gray-700"
                ></textarea>
            </div>

            <div class="text-center">
                <button
                    type="submit"
                    class="bg-gray-900 text-white px-8 py-3 rounded-xl hover:bg-gray-700 transition"
                >
                    Send message
                </button>
            </div>
        </form>

        <!-- Additional Mention -->
        <p class="text-xs text-center text-gray-500 mt-8">
            This form is processed via Netlify Forms. No data is shared with
            third parties.
        </p>

        <!-- Back Button -->
        <div class="text-center mt-16">
            <a
                href="/en"
                class="inline-block bg-gray-900 text-white px-8 py-3 rounded-xl hover:bg-gray-700 transition"
            >
                Back to Home
            </a>
        </div>
    </section>
    <Footer slot="footer" />
</Layout>
