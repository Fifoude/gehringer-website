---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import EnergyCharts from '../components/EnergyCharts.astro';
---

<Layout title="Tableau de Bord Solaire - APsystems">
    <Header slot="header" />
    
    <style>
        .solar-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        
        h1 {
            color: #667eea;
            margin-bottom: 20px;
            text-align: center;
        }
        
        h2 {
            color: #333;
            margin-bottom: 20px;
            font-size: 24px;
        }
        
        button {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            width: 100%;
        }
        
        button:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        
        button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }
        
        .tab {
            background: #f8f9fa;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s;
        }
        
        .tab.active {
            background: #667eea;
            color: white;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
            border-radius: 10px;
            color: white;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 120px;
        }
        
        .stat-label {
            font-size: 14px;
            opacity: 0.9;
            margin-bottom: 10px;
            white-space: nowrap;
        }
        
        .stat-value {
            font-size: 32px;
            font-weight: bold;
            white-space: nowrap;
        }
        
        .stat-unit {
            font-size: 16px;
            opacity: 0.8;
            margin-top: 5px;
            white-space: nowrap;
        }
        
        .energy-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 10px;
        }
        
        .energy-item-label {
            font-weight: 600;
            color: #333;
        }
        
        .energy-item-value {
            font-size: 20px;
            font-weight: bold;
            color: #667eea;
        }
        
        .energy-section {
            margin-bottom: 30px;
        }
        
        .energy-section h3 {
            color: #667eea;
            margin-bottom: 15px;
            font-size: 18px;
        }
        
        .info-card {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 10px;
            border-left: 4px solid #667eea;
        }
        
        .info-label {
            font-weight: 600;
            color: #667eea;
            margin-bottom: 5px;
        }
        
        .inverters-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }
        
        .inverter-card {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border: 2px solid #667eea;
        }
        
        .inverter-id {
            font-weight: bold;
            color: #667eea;
            margin-bottom: 5px;
        }
        
        .error {
            background: #ff4444;
            color: white;
            padding: 15px;
            border-radius: 8px;
            margin-top: 15px;
            display: none;
        }
        
        .error.visible {
            display: block;
        }
        
        .data-section {
            display: none;
        }
        
        .data-section.visible {
            display: block;
        }

        .alert {
            background: #d1ecf1;
            border: 2px solid #0c5460;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            color: #0c5460;
        }

        .alert-title {
            font-weight: bold;
            margin-bottom: 5px;
        }
    </style>

    <div class="solar-container">
        <div class="card">
            <h1>‚òÄÔ∏è Tableau de Bord Solaire APsystems</h1>
            
            <div class="alert">
                <div class="alert-title">‚ÑπÔ∏è Information</div>
                <p>Cette page vous permet de consulter les donn√©es de votre installation solaire APsystems en temps r√©el.</p>
            </div>
            
            <button id="loadBtn">üìä Charger les donn√©es</button>
            <div id="error" class="error"></div>
        </div>
        
        <div id="dataSection" class="data-section card">
            <div class="tabs">
                <div class="tab active" data-tab="system">Syst√®me</div>
                <div class="tab" data-tab="energy">√ânergie</div>
                <div class="tab" data-tab="balance">Bilan</div>
                <div class="tab" data-tab="inverters">Onduleurs</div>
                <div class="tab" data-tab="charts">Graphiques</div>
            </div>
            
            <div id="systemTab" class="tab-content active">
                <h2>Informations du Syst√®me</h2>
                <div id="systemInfo"></div>
            </div>
            
            <div id="energyTab" class="tab-content">
                <h2>Production d'√ânergie</h2>
                <div id="energyStats"></div>
            </div>

            <div id="balanceTab" class="tab-content">
                <h2>Bilan √ânerg√©tique du Jour</h2>
                <div id="balanceStats"></div>
            </div>
            
            <div id="invertersTab" class="tab-content">
                <h2>Onduleurs</h2>
                <div id="invertersList"></div>
            </div>
            <div id="chartsTab" class="tab-content">
                <h2>Visualisation des donn√©es</h2>
                <EnergyCharts
                    dailyData={[
                        { time: '6h', production: 0.3 },
                        { time: '8h', production: 1.4 },
                        { time: '10h', production: 3.1 },
                        { time: '12h', production: 5.0 },
                        { time: '14h', production: 4.8 },
                        { time: '16h', production: 2.9 },
                        { time: '18h', production: 0.9 },
                    ]}
                    balanceData={[
                        { name: 'Autoconsomm√©e', value: 4.2 },
                        { name: 'Inject√©e', value: 1.8 },
                        { name: 'Import√©e', value: 0.7 },
                    ]}
                />
            </div>
        </div>
    </div>

    <Footer slot="footer" />

    <script>
        // Gestion des onglets
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                const tabName = tab.dataset.tab;
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                tab.classList.add('active');
                document.getElementById(tabName + 'Tab').classList.add('active');
            });
        });

        function showError(message) {
            const errorEl = document.getElementById('error');
            errorEl.textContent = message;
            errorEl.classList.add('visible');
            setTimeout(() => errorEl.classList.remove('visible'), 5000);
        }

        async function makeRequest(endpoint) {
            const response = await fetch(`/.netlify/functions/apsystems?endpoint=${encodeURIComponent(endpoint)}`);
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.error || 'Erreur de requ√™te');
            }
            
            return await response.json();
        }

        async function loadSystemData() {
            const btn = document.getElementById('loadBtn');
            btn.disabled = true;
            btn.textContent = '‚è≥ Chargement...';
            
            try {
                // Charger les d√©tails du syst√®me
                const systemDetails = await makeRequest('/user/api/v2/systems/details/{systemId}');
                if (systemDetails.code !== 0) {
                    throw new Error(`Erreur API (${systemDetails.code}): ${systemDetails.msg || 'Erreur inconnue'}`);
                }
                displaySystemInfo(systemDetails.data);
                
                // Charger les donn√©es d'√©nergie
                const energySummary = await makeRequest('/user/api/v2/systems/summary/{systemId}');
                if (energySummary.code !== 0) {
                    throw new Error(`Erreur API (${energySummary.code}): ${energySummary.msg || 'Erreur inconnue'}`);
                }
                displayEnergySummary(energySummary.data);
                
                // Charger les onduleurs
                const inverters = await makeRequest('/user/api/v2/systems/inverters/{systemId}');
                if (inverters.code !== 0) {
                    throw new Error(`Erreur API (${inverters.code}): ${inverters.msg || 'Erreur inconnue'}`);
                }
                displayInverters(inverters.data);
                
                // Charger les compteurs (meters)
                const meters = await makeRequest('/user/api/v2/systems/meters/{systemId}');
                if (meters.code === 0 && meters.data && meters.data.length > 0) {
                    const meterId = meters.data[0];
                    const meterSummary = await makeRequest(`/user/api/v2/systems/{systemId}/devices/meter/summary/${meterId}`);
                    if (meterSummary.code === 0) {
                        displayEnergyBalance(meterSummary.data);
                    }
                } else {
                    document.getElementById('balanceStats').innerHTML = `
                        <div class="alert" style="background: #fff3cd; border-color: #ffc107; color: #856404;">
                            <div class="alert-title">‚ÑπÔ∏è Aucun compteur d√©tect√©</div>
                            <p>Votre syst√®me ne semble pas avoir de compteur activ√©. Le bilan √©nerg√©tique n'est pas disponible.</p>
                        </div>
                    `;
                }
                
                document.getElementById('dataSection').classList.add('visible');
                
            } catch (error) {
                showError(error.message);
                console.error(error);
            } finally {
                btn.disabled = false;
                btn.textContent = 'üìä Charger les donn√©es';
            }
        }

        // üîß Format fran√ßais : espace pour les milliers, virgule pour les d√©cimales
        function formatFr(value, decimals = 2) {
            if (isNaN(value)) return '-';
            return Number(value)
                .toLocaleString('fr-FR', {
                    minimumFractionDigits: decimals,
                    maximumFractionDigits: decimals
                });
        }

        // üß≠ Formater la date au format JJ-MM-AAAA
        function formatDateFr(dateStr) {
            if (!dateStr) return '-';
            const d = new Date(dateStr);
            if (isNaN(d)) return dateStr; // au cas o√π le format API n‚Äôest pas standard
            const day = String(d.getDate()).padStart(2, '0');
            const month = String(d.getMonth() + 1).padStart(2, '0');
            const year = d.getFullYear();
            return `${day}-${month}-${year}`;
        }

        function displaySystemInfo(data) {
            const types = {
                1: 'Syst√®me PV',
                2: 'Syst√®me de stockage',
                3: 'Syst√®me PV & Stockage'
            };
            
            const info = [
                { label: 'Identifiant syst√®me', value: data.sid },
                { label: 'Date de cr√©ation', value: formatDateFr(data.create_date) },
                { label: 'Capacit√© install√©e', value: `${formatFr(data.capacity)} kW` },
                { label: 'Type', value: types[data.type] || 'Inconnu' },
                { label: 'Fuseau horaire', value: data.timezone },
                { label: 'ECU', value: (data.ecu || []).join(', ') }
            ];

            document.getElementById('systemInfo').innerHTML = `
                <div class="grid sm:grid-cols-2 gap-4">
                    ${info.map(item => `
                        <div class="flex justify-between items-center bg-gray-50 rounded-lg px-4 py-2 border border-gray-200">
                            <span class="text-gray-600 font-medium">${item.label}</span>
                            <span class="text-gray-900 font-semibold">${item.value}</span>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function displayEnergySummary(data) {
            const stats = [
                { label: "Aujourd‚Äôhui", value: data.today },
                { label: "Ce mois", value: data.month },
                { label: "Cette ann√©e", value: data.year },
                { label: "Total", value: data.lifetime }
            ];

            document.getElementById('energyStats').innerHTML = `
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    ${stats.map(s => `
                        <div class="rounded-xl bg-gradient-to-br from-slate-800 to-slate-600 p-4 text-white text-center shadow-sm">
                            <div class="text-sm text-slate-200">${s.label}</div>
                            <div class="text-2xl md:text-3xl font-bold mt-1">
                                ${formatFr(s.value)}
                            </div>
                            <div class="text-xs opacity-80 mt-0.5">kWh</div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function displayEnergyBalance(data) {
            const t = data.today || {};
            const produced = parseFloat(t.produced || 0);
            const consumed = parseFloat(t.consumed || 0);
            const exported = parseFloat(t.exported || 0);
            const imported = parseFloat(t.imported || 0);
            const selfConsumed = produced - exported;
            const rateSelf = produced ? (selfConsumed / produced) * 100 : 0;
            const rateAuto = consumed ? (selfConsumed / consumed) * 100 : 0;

            document.getElementById('balanceStats').innerHTML = `
                <div class="grid sm:grid-cols-2 gap-4 mb-6">
                    ${[
                        ['‚òÄÔ∏è Produite', produced],
                        ['üè† Consomm√©e', consumed],
                        ['‚¨ÜÔ∏è Inject√©e', exported],
                        ['‚¨áÔ∏è Import√©e', imported]
                    ].map(([label, val]) => `
                        <div class="flex justify-between bg-gray-50 border border-gray-200 rounded-lg px-4 py-2">
                            <span class="text-gray-600">${label}</span>
                            <span class="font-semibold text-gray-900">${formatFr(val)} kWh</span>
                        </div>
                    `).join('')}
                </div>

                <div class="grid sm:grid-cols-3 gap-4">
                    <div class="bg-green-500 text-white rounded-xl text-center py-4 shadow-sm">
                        <div class="text-sm">Autoconsomm√©e</div>
                        <div class="text-2xl font-bold">${formatFr(selfConsumed)}</div>
                        <div class="text-xs opacity-90 mt-0.5">kWh</div>
                    </div>
                    <div class="bg-yellow-500 text-white rounded-xl text-center py-4 shadow-sm">
                        <div class="text-sm">Taux d‚Äôautoconso.</div>
                        <div class="text-2xl font-bold">${formatFr(rateSelf, 0)} %</div>
                    </div>
                    <div class="bg-blue-600 text-white rounded-xl text-center py-4 shadow-sm">
                        <div class="text-sm">Taux d‚Äôautonomie</div>
                        <div class="text-2xl font-bold">${formatFr(rateAuto, 0)} %</div>
                    </div>
                </div>
            `;
        }

        function displayInverters(data) {
            const html = data.map(ecu => `
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">ECU : ${ecu.eid}</h3>
                    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-3">
                        ${ecu.inverter.map(inv => `
                            <div class="p-3 bg-gray-50 border border-gray-200 rounded-lg text-sm">
                                <div class="font-semibold text-gray-900">${inv.uid}</div>
                                <div class="text-gray-600">Type : ${inv.type}</div>
                            </div>
                        `).join('')}
                    </div>
                </div>
            `).join('');

            document.getElementById('invertersList').innerHTML = html;
        }

        document.getElementById('loadBtn').addEventListener('click', loadSystemData);
    </script>
</Layout>