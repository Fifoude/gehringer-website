---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServicesContent from '../content/services.md';
---

<Layout title="Tableau de Bord Solaire - APsystems">
    <style>
        .solar-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        
        h1 {
            color: #667eea;
            margin-bottom: 20px;
            text-align: center;
        }
        
        h2 {
            color: #333;
            margin-bottom: 20px;
            font-size: 24px;
        }
        
        .config-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        
        .input-group {
            margin-bottom: 15px;
        }
        
        label {
            display: block;
            margin-bottom: 5px;
            color: #333;
            font-weight: 600;
        }
        
        input {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.3s;
        }
        
        input:focus {
            outline: none;
            border-color: #667eea;
        }
        
        button {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            width: 100%;
        }
        
        button:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        
        button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }
        
        .tab {
            background: #f8f9fa;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s;
        }
        
        .tab.active {
            background: #667eea;
            color: white;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
            border-radius: 10px;
            color: white;
            text-align: center;
        }
        
        .stat-label {
            font-size: 14px;
            opacity: 0.9;
            margin-bottom: 10px;
        }
        
        .stat-value {
            font-size: 32px;
            font-weight: bold;
        }
        
        .stat-unit {
            font-size: 16px;
            opacity: 0.8;
            margin-top: 5px;
        }
        
        .info-card {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 10px;
            border-left: 4px solid #667eea;
        }
        
        .info-label {
            font-weight: 600;
            color: #667eea;
            margin-bottom: 5px;
        }
        
        .inverters-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }
        
        .inverter-card {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border: 2px solid #667eea;
        }
        
        .inverter-id {
            font-weight: bold;
            color: #667eea;
            margin-bottom: 5px;
        }
        
        .error {
            background: #ff4444;
            color: white;
            padding: 15px;
            border-radius: 8px;
            margin-top: 15px;
            display: none;
        }
        
        .error.visible {
            display: block;
        }
        
        .data-section {
            display: none;
        }
        
        .data-section.visible {
            display: block;
        }

        .alert {
            background: #d1ecf1;
            border: 2px solid #0c5460;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            color: #0c5460;
        }

        .alert-title {
            font-weight: bold;
            margin-bottom: 5px;
        }
    </style>

    <div class="solar-container">
        <div class="card">
            <h1>‚òÄÔ∏è Tableau de Bord Solaire APsystems</h1>
            
            <div class="alert">
                <div class="alert-title">‚ÑπÔ∏è Information</div>
                <p>Cette page vous permet de consulter les donn√©es de votre installation solaire APsystems en temps r√©el.</p>
            </div>
            
            <div class="config-section">
                <div class="input-group">
                    <label for="appId">APP ID:</label>
                    <input type="text" id="appId" placeholder="Entrez votre APP ID">
                </div>
                
                <div class="input-group">
                    <label for="appSecret">APP Secret:</label>
                    <input type="password" id="appSecret" placeholder="Entrez votre APP Secret">
                </div>
                
                <div class="input-group">
                    <label for="systemId">System ID (SID):</label>
                    <input type="text" id="systemId" placeholder="Ex: AZ12649A3DFF">
                </div>
                
                <button id="loadBtn">üìä Charger les donn√©es</button>
                <div id="error" class="error"></div>
            </div>
        </div>
        
        <div id="dataSection" class="data-section card">
            <div class="tabs">
                <div class="tab active" data-tab="system">Syst√®me</div>
                <div class="tab" data-tab="energy">√ânergie</div>
                <div class="tab" data-tab="inverters">Onduleurs</div>
            </div>
            
            <div id="systemTab" class="tab-content active">
                <h2>Informations du Syst√®me</h2>
                <div id="systemInfo"></div>
            </div>
            
            <div id="energyTab" class="tab-content">
                <h2>Production d'√ânergie</h2>
                <div id="energyStats"></div>
            </div>
            
            <div id="invertersTab" class="tab-content">
                <h2>Onduleurs</h2>
                <div id="invertersList"></div>
            </div>
        </div>
    </div>

    <script>
        let config = {
            appId: '',
            appSecret: '',
            systemId: ''
        };

        // Gestion des onglets
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                const tabName = tab.dataset.tab;
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                tab.classList.add('active');
                document.getElementById(tabName + 'Tab').classList.add('active');
            });
        });

        function showError(message) {
            const errorEl = document.getElementById('error');
            errorEl.textContent = message;
            errorEl.classList.add('visible');
            setTimeout(() => errorEl.classList.remove('visible'), 5000);
        }

        async function makeRequest(endpoint, params = {}) {
            const queryString = new URLSearchParams({
                appId: config.appId,
                appSecret: config.appSecret,
                ...params
            }).toString();

            const response = await fetch(`/.netlify/functions/apsystems?endpoint=${encodeURIComponent(endpoint)}&${queryString}`);
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.error || 'Erreur de requ√™te');
            }
            
            return await response.json();
        }

        async function loadSystemData() {
            config.appId = document.getElementById('appId').value.trim();
            config.appSecret = document.getElementById('appSecret').value.trim();
            config.systemId = document.getElementById('systemId').value.trim();
            
            if (!config.appId || !config.appSecret || !config.systemId) {
                showError('Veuillez remplir tous les champs');
                return;
            }
            
            const btn = document.getElementById('loadBtn');
            btn.disabled = true;
            btn.textContent = '‚è≥ Chargement...';
            
            try {
                // Charger les d√©tails du syst√®me
                const systemDetails = await makeRequest(`/user/api/v2/systems/details/${config.systemId}`);
                if (systemDetails.code !== 0) {
                    throw new Error(`Erreur API (${systemDetails.code})`);
                }
                displaySystemInfo(systemDetails.data);
                
                // Charger les donn√©es d'√©nergie
                const energySummary = await makeRequest(`/user/api/v2/systems/summary/${config.systemId}`);
                if (energySummary.code !== 0) {
                    throw new Error(`Erreur API (${energySummary.code})`);
                }
                displayEnergySummary(energySummary.data);
                
                // Charger les onduleurs
                const inverters = await makeRequest(`/user/api/v2/systems/inverters/${config.systemId}`);
                if (inverters.code !== 0) {
                    throw new Error(`Erreur API (${inverters.code})`);
                }
                displayInverters(inverters.data);
                
                document.getElementById('dataSection').classList.add('visible');
                
            } catch (error) {
                showError(error.message);
                console.error(error);
            } finally {
                btn.disabled = false;
                btn.textContent = 'üìä Charger les donn√©es';
            }
        }

        function displaySystemInfo(data) {
            const types = {
                1: 'Syst√®me PV',
                2: 'Syst√®me de stockage',
                3: 'Syst√®me PV & Stockage'
            };
            
            const html = `
                <div class="info-card">
                    <div class="info-label">System ID</div>
                    <div>${data.sid}</div>
                </div>
                <div class="info-card">
                    <div class="info-label">Date de cr√©ation</div>
                    <div>${data.create_date}</div>
                </div>
                <div class="info-card">
                    <div class="info-label">Capacit√©</div>
                    <div>${data.capacity} kW</div>
                </div>
                <div class="info-card">
                    <div class="info-label">Type</div>
                    <div>${types[data.type] || 'Inconnu'}</div>
                </div>
                <div class="info-card">
                    <div class="info-label">Fuseau horaire</div>
                    <div>${data.timezone}</div>
                </div>
                <div class="info-card">
                    <div class="info-label">ECU(s)</div>
                    <div>${data.ecu.join(', ')}</div>
                </div>
            `;
            document.getElementById('systemInfo').innerHTML = html;
        }

        function displayEnergySummary(data) {
            const html = `
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-label">Aujourd'hui</div>
                        <div class="stat-value">${data.today}</div>
                        <div class="stat-unit">kWh</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Ce mois</div>
                        <div class="stat-value">${data.month}</div>
                        <div class="stat-unit">kWh</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Cette ann√©e</div>
                        <div class="stat-value">${data.year}</div>
                        <div class="stat-unit">kWh</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Total</div>
                        <div class="stat-value">${data.lifetime}</div>
                        <div class="stat-unit">kWh</div>
                    </div>
                </div>
            `;
            document.getElementById('energyStats').innerHTML = html;
        }

        function displayInverters(data) {
            let html = '';
            data.forEach(ecu => {
                html += `<h3 style="color: #667eea; margin-top: 20px;">ECU: ${ecu.eid}</h3>`;
                html += `<div class="inverters-grid">`;
                ecu.inverter.forEach(inv => {
                    html += `
                        <div class="inverter-card">
                            <div class="inverter-id">${inv.uid}</div>
                            <div>Type: ${inv.type}</div>
                        </div>
                    `;
                });
                html += `</div>`;
            });
            document.getElementById('invertersList').innerHTML = html;
        }

        document.getElementById('loadBtn').addEventListener('click', loadSystemData);
    </script>
</Layout>